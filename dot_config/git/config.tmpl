[user]
    name = norville
    email = {{ .email_dev }}
[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
[init]
    defaultBranch = main
[status]
    submoduleSummary = true
    showUntrackedFiles = normal
[color]
    ui = auto
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
