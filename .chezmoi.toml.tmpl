{{- /* Detect OS and Linux distro */ -}}
{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
    {{- $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

# Define chezmoi variables to be used in templates
[data]
    vendor = {{ $vendor | quote }}
    osid = {{ $osid | quote }}
    email = "ing.norville@protonmail.com"

# Define ENV variables for shell scripts
[scriptEnv]
    # Path to helper functions
    HELPERS = ".config/bdb/bdb_helpers.sh"

# Define commands to run after chezmoi actions
[hooks.update.post]
script = "env-update.sh"
