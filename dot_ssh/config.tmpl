Host *

{{- if eq .chezmoi.os "darwin" }}
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
{{- else if eq .chezmoi.os "linux" }}
    IdentityAgent ~/.1password/agent.sock
{{- end }}
    IdentitiesOnly yes  # use only specified keys, even if ssh-agent offers more identities

Host jiraya
    Port 25355
    User norville
    IdentityFile ~/.ssh/norville_at_basnet.pub
    ForwardAgent yes

Host jiraya-code
    HostName jiraya
    Port 25355
    User code
    IdentityFile ~/.ssh/code_at_jiraya.pub
    ForwardAgent yes

Host gitea.basnet.lan
    Port 22
    IdentityFile ~/.ssh/norville_at_gitea.pub

Host *.basnet.lan
    Port 25355
    User norville
    IdentityFile ~/.ssh/norville_at_basnet.pub
    SetEnv TERM=xterm-256color  # Avoid terminfo issues with Ghostty

Host github.com
    IdentityFile ~/.ssh/norville_at_github.pub
