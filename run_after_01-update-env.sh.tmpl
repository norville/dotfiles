#!/bin/bash

{{ if eq .osid "darwin" -}}

# update homebrew and installed formulae
brew upgrade

# Upgrade PyPI packages
pip3 install -U -r "${HOME}"/.config/pip/requirements.txt

{{ else if eq .osid "linux-debian" -}}

{{ else if eq .osid "linux-ubuntu" -}}

{{ end -}}

# update zsh plugins
antigen_dir="${HOME}/.antigen"
[[ -d "${antigen_dir}" ]] && rm -rf "${antigen_dir}"
mkdir -p "${antigen_dir}"
git clone https://github.com/zsh-users/antigen.git "${antigen_dir}"

# update vim plugins
curl    -fLo "${HOME}"/.vim/autoload/plug.vim --create-dirs \
        https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
vim -es -u "${HOME}"/.vimrc -i NONE -c "PlugUpdate" -c "qa"
